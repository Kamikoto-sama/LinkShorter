@model List<LinkShorter.WebApi.Models.CustomTagSchema>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<center class="container">
    <div>
        <label for="access-key">Access key:</label>
        <input id="access-key" placeholder="Access key" type="text">
    </div>
    <hr>
    <div>
        <button id="create-link-tab-btn">Create link</button>
        <button id="export-tab-btn">Export</button>
    </div>
    <div id="create-link-tab">
        <h3>Create link:</h3>
        <label for="original-url">Original url:</label>
        <input type="text" id="original-url" placeholder="Original url">
        <br>
        <label for="short-link-name">Short link name: </label>
        <input type="text" id="short-link-name" placeholder="(optional)">
        <br>
        <br>
        <div>
            @foreach (var tag in Model)
            {
                @:<label for="custom-tag-@tag.Index">@tag.Name:</label>
                <br>
                <textarea id="custom-tag-@tag.Index" name="@tag.Index" class="custom-tag" rows="1"></textarea>
                <br>
            }
        </div>
        <br>
        <button type="submit" id="submit">Submit</button>
        <hr>
        <div id="result-links-container"></div>
    </div>
    <div id="export-tab">
        <h3>Export:</h3>
        <label for="export-date-since">Since:</label>
        <input type="date" id="export-date-since"><br><br>
        <label for="export-date-until">Until:</label>
        <input type="date" id="export-date-until"><br>
        <br>
        <button id="export-btn">Create export</button>
    </div>
</center>
</body>
<script src="script.js"></script>
</html>